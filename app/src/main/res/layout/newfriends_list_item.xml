<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_user_relative"
        android:background="@drawable/choice_bg"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="0dp"
            android:id="@+id/user_img_list"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="BOGoSS"
            android:id="@+id/user_name_list"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/user_img_list"
            android:layout_marginStart="30dp" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/acceptBtn"
            android:layout_gravity="right|center_vertical"
            android:onClick="onClick"
            android:background="@drawable/accept"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/refuseBtn"
            android:layout_gravity="right|center_vertical"
            android:onClick="onClick"
            android:background="@drawable/refuse"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/acceptBtn"
            android:layout_marginEnd="15dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:id="@+id/imageView3"
        android:background="#515151"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />
</LinearLayout>