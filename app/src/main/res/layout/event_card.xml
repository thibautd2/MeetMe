<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"

            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="5dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/list_event_relative"
                android:background="@drawable/choice_bg"
                android:layout_marginTop="0dp">


                <ImageView
                    android:layout_width="180dp"
                    android:id="@+id/event_img_list"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="3 km"
                    android:id="@+id/event_card_distance"
                    android:layout_alignParentTop="true"
                    android:layout_alignEnd="@+id/event_img_list"
                    android:layout_margin="3dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textSize="12dp"
                    android:autoText="false"
                    android:background="@drawable/rounded_background" />

                <TextView
                    android:text="Thibaut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_user"
                    android:textStyle="bold"
                    android:layout_below="@+id/event_name_list"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toStartOf="@+id/event_date_list"
                    android:singleLine="true"
                    android:layout_marginBottom="-3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="BOGoSS"
                    android:id="@+id/event_name_list"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:alpha="0.8"
                    android:layout_alignBottom="@+id/event_img_list"
                    android:layout_alignParentStart="true"
                    android:layout_alignEnd="@+id/event_img_list" />

                <TextView
                    android:text="3 participants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_user"
                    android:layout_alignStart="@+id/event_adresse"
                    android:id="@+id/participants"
                    android:layout_alignEnd="@+id/event_date_list"
                    android:textSize="12sp"
                    android:textStyle="italic" />

                <TextView
                    android:text="Adresse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_adresse"
                    android:textSize="11sp"
                    android:layout_below="@+id/participants"
                    android:layout_alignParentStart="true"
                    android:layout_alignEnd="@+id/event_date_list"
                    android:layout_marginLeft="4dp"
                    android:layout_margin="5dp" />

                <TextView
                    android:text="Date/Heure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_date_list"
                    android:singleLine="true"
                    android:textSize="9sp"
                    android:gravity="right"
                    android:layout_alignTop="@+id/event_user"
                    android:layout_alignEnd="@+id/event_card_distance" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>