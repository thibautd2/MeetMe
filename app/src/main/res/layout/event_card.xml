<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"

            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/list_event_relative"
                android:background="@drawable/choice_bg"
                android:layout_marginTop="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="3 km"
                    android:id="@+id/event_card_distance"
                    android:layout_alignParentTop="true"
                    android:layout_alignEnd="@+id/event_img_list"
                    android:layout_margin="3dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textSize="12dp"
                    android:autoText="false"
                    android:background="@drawable/rounded_background" />


                <TextView
                    android:text="Date/Heure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_date_list"
                    android:singleLine="true"
                    android:layout_below="@+id/event_img_list"
                    android:layout_alignParentStart="true"
                    android:layout_alignEnd="@+id/event_name_list"
                    android:textStyle="bold" />

                <TextView
                    android:text="Ansome22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:textSize="12sp"
                    android:layout_above="@+id/event_date_list"
                    android:layout_alignParentStart="true"
                    android:layout_alignEnd="@+id/event_card_distance" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="BOGoSS"
                    android:id="@+id/event_name_list"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:alpha="0.7"
                    android:layout_above="@+id/textView10"
                    android:layout_alignEnd="@+id/textView10"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:id="@+id/event_img_list"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

</LinearLayout>