<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"

        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/list_user_relative"
        android:background="@drawable/choice_bg"
        android:layout_marginTop="0dp">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="220dp"
            android:id="@+id/user_img_list"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="age"
            android:id="@+id/list_user_age"
            android:layout_alignBaseline="@+id/user_name_list"
            android:layout_alignBottom="@+id/user_name_list"
            android:layout_toEndOf="@+id/user_name_list"
            android:layout_marginLeft="10dp"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="BOGoSS"
            android:id="@+id/user_name_list"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_below="@+id/user_img_list"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Cherche Ã  faire des rencontres"
            android:id="@+id/user_envie_list"
            android:minLines="1"
            android:layout_below="@+id/list_user_age"
            android:layout_alignStart="@+id/user_name_list"
            android:layout_alignEnd="@+id/user_img_list"
            android:textSize="12dp"
            android:layout_marginTop="-5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="3 km"
            android:id="@+id/card_distance"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/user_img_list"
            android:layout_margin="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textSize="12dp"
            android:autoText="false"
            android:background="@drawable/rounded_background" />

        <ImageView
            android:layout_width="30dp"
            app:srcCompat="@drawable/ic_star"
            android:layout_below="@+id/card_distance"
            android:layout_alignEnd="@+id/user_img_list"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:id="@+id/imageViewStar"
            android:layout_height="30dp"
            android:visibility="gone"/>

    </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>